#ifndef Book_h
#define Book_h
#include <string>
#include <iostream>


using namespace std;

struct price;

class Book
{
private:
    string ISBN;
    string title;
    string author;
    string publisher;
    string date;
    int stock;
    double wholesale;
    double retail;
    
public:
    Book();
    Book(char[10], string, string, string, char[8], int, double, double);
    
    void setISBN(string);
    void setTitle(string);
    void setAuthor(string);
    void setPub(string);
    void setDate(string);
    void setStock(int);
    void setWS(double);
    void setRT(double);
    
    
    string getISBN();
    string getTitle();
    string getAuthor();
    string getPub();
    string getDate();
    int getStock();
    double getWholesale();
    double getRetail();
    
    bool verifyISBN(string);
    void correctPrices();
    
    const Book operator=(const Book&);
    
    ~Book();
};



#endif /* Book_h */

