#include <iostream>
#include "Inventory.h"
#include "Inventory.h"
#include "Module.h"

int main(int argc, const char * argv[]) {
    
    Module *modules[4];
    modules[0] = new Module;
    modules[1] = new Inventory("/Users/matanbroner/Desktop/datafile.txt");
    int choice = int(modules[0]->displayTopMenu());
    switch (choice)
    {
        case 1:
            break; // cashier
        case 2:
            modules[1]->displayTopMenu();
            break;
        case 3:
            break; // reports
        case 4:
            exit(0);
            break;
        case 0:
            modules[0]->displayTopMenu();
            break;
        default:
            cout << "Not valid input..." << endl;
            modules[0]->displayTopMenu();
    }
    
    return 0;
}
